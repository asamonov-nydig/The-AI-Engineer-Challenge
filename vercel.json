{
  "version": 2,
  "public": true,
  "github": {
    "silent": true
  },
  "builds": [
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/next"
    },
    { 
      "src": "api/app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/api/app.py"
    },
    { 
      "src": "/(.*)", 
      "dest": "/frontend/$1"
    }
  ]
} 